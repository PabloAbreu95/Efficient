<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pablo.efficient.HorarioPackage.add_Horario"
    tools:showIn="@layout/activity_add__horario"
    >
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="8dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    android:layout_marginBottom="50dp"
    android:background="@color/cinzaclaro3"
    android:elevation="5dp"
    >
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disciplina"
            />

        <Spinner
            android:id="@+id/spinnerDisciplinaHorario"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/dia" />

        <Spinner
            android:id="@+id/spinnerDiaHorario"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

</LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:background="@color/azul_claro"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sala"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />


        <EditText
            android:id="@+id/editTextSalaHorario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inicio"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <EditText
            android:id="@+id/edtTextHorarioInicio"
            android:focusable="false"
            android:onClick="set_timeinicio"
            android:minEms="10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
